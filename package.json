{
  "name": "component-mixins",
  "private": true,
  "description": "Mixins and helpers for future versions of Vaadin components",
  "author": "Vaadin Ltd",
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsc",
    "lint": "eslint packages --ext .ts",
    "test": "karma start",
    "test:debug": "karma start --single-run false --browsers Chrome",
    "test:sauce": "cross-env TEST_PLATFORM=sauce karma start"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@babel/preset-typescript": "^7.9.0",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@commitlint/config-lerna-scopes": "^8.3.4",
    "@open-wc/karma-esm": "^2.9.0",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/sinon": "^9.0.0",
    "@types/sinon-chai": "^3.2.4",
    "chai": "^4.2.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-vaadin": "^0.3.5",
    "husky": "^4.2.3",
    "karma": "^5.0.2",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage": "^2.0.2",
    "karma-firefox-launcher": "^1.3.0",
    "karma-mocha": "^2.0.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sauce-launcher": "^2.0.2",
    "karma-sinon-chai": "^2.0.2",
    "karma-source-map-support": "^1.4.0",
    "lerna": "^3.20.2",
    "lint-staged": "^10.1.2",
    "mocha": "^7.1.1",
    "prettier": "^1.19.1",
    "sinon": "^9.0.1",
    "sinon-chai": "^3.5.0",
    "ts-lit-plugin": "^1.1.10",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "workspaces": [
    "packages/*"
  ]
}
